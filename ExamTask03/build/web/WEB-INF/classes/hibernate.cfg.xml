    <property name="hibernate.dialect">model.util.SQLiteDialect</property>
    <property name="show_sql">true</property>
    <mapping resource="model/pojo/Employee.hbm.xml"/>
    <mapping resource="model/pojo/Department.hbm.xml"/>
    <mapping resource="model/pojo/EmpToDeps.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
